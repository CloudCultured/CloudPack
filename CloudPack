"""
"""
from breezypythongui import EasyFrame
class CloudPack(EasyFrame):
    def __init__(self):
        EasyFrame.__init__(self, title = 'The Cloud Pack')
        self.setResizable(True)
        self.outputArea = self.addTextArea("Welcome To The Cloud Pack", row = 1, column = 0,
                                    columnspan = 2,
                                    width = 1, height = 1)
        buttonPanel=self.addPanel(row=2, column = 0,
                       background="blue")
        buttonPanel.addButton(text = "Schedule", row = 3, column = 0,
                    command = self.getSchedule)
    def getSchedule(self):
        self.messageBox(title = "Schedule",
                        message = "Mon-Fri: 7PM-12PM \nSat: 7PM-2AM",
                        width=25,
                        height=5)

CloudPack().mainloop()
